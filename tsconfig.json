{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "esnext"
    ],
    "removeComments": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "outDir": "build",
    "inlineSourceMap": true,
    "importHelpers": false,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "*.js",
    ".*.js",
    "website/**/*.js"
  ],
  "exclude": [
    "**/*/node_modules/**/*",
    "website/build/**/*"
  ]
}
